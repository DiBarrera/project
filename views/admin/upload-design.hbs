<div id="form">

  <section class="container text-center mx-auto">
    <div class="col-md-12 col-sm-12">
        <h1>Añade un diseño</h1>
    </div>
  </section>

  <form action="/upload-design" method="POST" enctype='multipart/form-data'>

    <div class="mb-3 row">
      <label for="artistDesign" class="col-sm-2 col-form-label">Nombre del artista: </label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="artistDesign" placeholder="Tu nombre" />
        </div>
    </div>

    <div class="mb-3 row">
      <label for="title" class="col-sm-2 col-form-label">Titulo: </label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="title" placeholder="Titulo del diseño"/>
        </div>
    </div>

    <div class="mb-3 row">
      <label for="design" class="col-sm-2 col-form-label">Diseño</label>
        <div class="col-sm-10">
          <input class="form-control" type="file" name="design" />
        </div>
    </div>

    <div class="mb-3 row">
      <label for="descriptcion" class="col-sm-2 col-form-label">Descripción: </label>
        <div class="col-sm-10">
          <textarea class="form-control" type="text" name="descriptcion" placeholder="Añade una descripción de tu diseño"></textarea>
        </div>
    </div>

    <button type="submit" class="btn btn-dark">Subir diseño</button>

  </form>

</div>