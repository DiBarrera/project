{{> navigation this }}

<div id="form">
  <h2>Ingresar como usuario</h2>
  <form action="/login" method="POST">
    <label for="input-email">Correo</label>
    <input type="email" id="input-email" name="email" placeholder="Ingrese su correo" />

    <label for="input-password">Contraseña</label>
    <input type="password" name="password" id="input-password" placeholder="Ingrese su contraseña" />

    <button type="submit">Login</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>