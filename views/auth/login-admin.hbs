{{> navigation this }}

<div id="form">

  <section class="container text-center mx-auto">
    <div class="col-md-12 col-sm-12">
        <h1>Ingresar como Admin</h1>
    </div>
  </section>

  <form action="/login-admin" method="POST">

    <label for="email">Correo</label>
    <input type="email" id="email" name="email" placeholder="Ingrese su correo" />

    <label for="passwordHash">Contraseña</label>
    <input type="password" name="passwordHash" id="input-password" placeholder="Ingrese su contraseña" />

    <button type="submit">Login</button>

    {{#if errorMessage2}}
      <p class="error">{{errorMessage2}}</p>
    {{/if}}

  </form>
  
</div>