<div id="signup">

  <section class="container text-center mx-auto">
    <div class="col-md-12 col-sm-12">
        <h1>Registrarse</h1>
    </div>
  </section>

  <form action="/signup" method="POST">

    <div class="mb-3 row">
      <label for="username" class="col-sm-2 col-form-label">Usuario</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="username" placeholder="Ingrese un ususario" />
        </div>
    </div>

    <div class="mb-3 row">
      <label for="email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input class="form-control" type="email" id="input-email" name="email" placeholder="Ingrese un correo" />
        </div>
    </div>

    <div class="mb-3 row">
      <label for="password" class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
          <input class="form-control" type="password" name="password" id="input-password" placeholder="Ingrese una contraseÃ±a" />
        </div>
    </div>     
    <button type="submit" class="btn btn-dark">Registrarme</button>    

      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
  </form>
</div>