    <input type="text" name="username" placeholder="Ingrese un ususario" />

    <label for="input-email"> Correo </label>
    <input type="email" id="input-email" name="email" placeholder="Ingrese un correo" />

    <label for="input-password"> Password </label>
    <input type="password" name="password" id="input-password" placeholder="Ingrese una contraseÃ±a" />

    <button type="submit">Crear cuenta</button>

      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
  </form>
</div>